.contentVideoBox {
  width: 100vw;
  height: 30vh;
}
.contentVideoBox video {
  display: block;
  width: 100vw;
  height: 30vh;
}
.contentPicBox {
  height: 65vh;
  overflow: hidden;
}
.contentPicBox image {
  width: 100%;
  height: 65vh;
  display: inline-block;
}
.contentAgentBox {
  padding-top: 0.2vh;
  height: 4.8vh;
  background: #F0AD4E;
}
.contentAgentBox .agentAdBox text {
  display: block;
  text-align: center;
  font-size: 0.6rem;
}
.contentAgentBox .agentAdBox text:last-of-type {
  font-size: 1.6vh;
}

